PORT=5000
NODE_ENV=development

# Comma-separated list of allowed origins for CORS, e.g.:
# CORS_ORIGINS=http://localhost:3000,https://your-production-frontend.com
CORS_ORIGINS=http://localhost:3000

# If running behind a reverse proxy/load balancer (e.g. Nginx, Heroku, Render), set this to true
TRUST_PROXY=false

#
# Google Gemini API
#
GEMINI_API_KEY=your_gemini_api_key_here

